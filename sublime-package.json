{
  "contributions": {
    "settings": [
      {
        "file_patterns": [
          "PythonDocblockr.sublime-settings"
        ],
        "schema": {
          "$id": "sublime://settings/python-docblockr",
          "properties": {
            "formatter": {
              "type": "string",
              "default": "google",
              "enum": [
                "PEP0257",
                "docblock",
                "google",
                "sphinx",
                "numpy"
              ],
              "markdownDescription": "This option dictates which style of docstrings to use, when parsing docstrings."
            }
          }
        }
      },
      {
        "file_patterns": [
          "/*.sublime-project"
        ],
        "schema": {
          "properties": {
            "settings": {
              "properties": {
                "PythonDocblockr": {
                  "$ref": "sublime://settings/python-docblockr"
                }
              }
            }
          }
        }
      }
    ]
  }
}